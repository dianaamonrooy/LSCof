<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Logic.Actividades.TabbedActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="@color/white"
            app:tabBackground="@color/purple_200"

            >


            <com.google.android.material.tabs.TabItem
                android:id="@+id/cultura_sorda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/deaf"

                />


            <!-- android:text="Cultura sorda" -->


            <com.google.android.material.tabs.TabItem
                android:id="@+id/LSC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/hands" />
            <!--android:text="Tuesday"-->

            <com.google.android.material.tabs.TabItem
                android:id="@+id/user_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/usuario" />
            <!--android:text="Wednesday"-->
        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>