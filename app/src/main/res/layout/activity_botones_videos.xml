<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoSeUsan.BasesSwipe.PageChanger"
    android:descendantFocusability="blocksDescendants">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager_botones_videos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:foregroundGravity="center"
        android:overScrollMode="never">

    </androidx.viewpager.widget.ViewPager>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/boton_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/round"
            android:backgroundTint="@color/color1"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Descubre"
            android:textColor="#fff"
            android:textColorHighlight="#CDB4DB"
            android:textColorLink="#FFFFFF"
            android:textCursorDrawable="@drawable/round"
            app:backgroundTint="#68ABEA"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.913" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>