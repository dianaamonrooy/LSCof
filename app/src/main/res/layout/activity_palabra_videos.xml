<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Practica.Palabra_videos">

    <TextView
        android:id="@+id/chosen_word_palabra_videos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.171" />

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="370dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.753">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <VideoView
                android:id="@+id/video3_palabra_videos"
                android:layout_width="174dp"
                android:layout_height="123dp" />

            <Space
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

            <VideoView
                android:id="@+id/video4_palabra_videos"
                android:layout_width="174dp"
                android:layout_height="123dp" />
        </TableRow>

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <VideoView
                android:id="@+id/video1_palabra_videos"
                android:layout_width="174dp"
                android:layout_height="123dp" />

            <Space
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

            <VideoView
                android:id="@+id/video2_palabra_videos"
                android:layout_width="174dp"
                android:layout_height="123dp" />
        </TableRow>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>